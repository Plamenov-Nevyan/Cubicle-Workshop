<main>
    <a class="actionLink" href="/auth/add-avatar"><img id="addAvatarIcon" src="../static/images/camera.svg"> Add profile picture</a>`
        <div class="userInfo">
            <div class="avatar"> 
               {{#if user.imageUrl}}
               <img src="{{user.imageUrl}}">
               {{else}}
               <img src="../static/images/anonymous-{{user.gender}}.jpg">
               {{/if}}
            </div>
            <h2 id="usernamePlaceholder">{{user.username}}</h2>
            <h2>{{user.country}}</h2>
            <hr>
        </div>
        <h3 id="added-by">Cubes added by {{user.username}}:</h3>
            {{#each user.cubes}}
            {{> cube}}
            {{/each}}
    </main>`